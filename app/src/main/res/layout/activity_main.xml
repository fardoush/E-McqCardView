<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center"
    android:background="#fcf9f9"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <android.support.v7.widget.CardView
            android:id="@+id/banglaId"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="match_parent">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:src="@drawable/bangla"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:padding="10dp"/>

                <TextView
                    android:text="Bangla MCQ"
                    android:layout_margin="10dp"
                    android:textStyle="bold|italic"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/englishId"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="match_parent">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:src="@drawable/english_logo"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:padding="10dp"/>

                <TextView
                    android:text="English MCQ"
                    android:layout_margin="10dp"
                    android:textStyle="bold|italic"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <android.support.v7.widget.CardView
            android:id="@+id/mathId"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="match_parent">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:src="@drawable/math_logo"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:padding="10dp"/>

                <TextView
                    android:text="Math MCQ"
                    android:layout_margin="10dp"
                    android:textStyle="bold|italic"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/ictId"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="match_parent">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:src="@drawable/ict"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:padding="10dp"/>

                <TextView
                    android:text="ICT MCQ"
                    android:layout_margin="10dp"
                    android:textStyle="bold|italic"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>